{
    "name": "Van Gogh TEI Publisher App Development Container",
    "build": {
        "dockerfile": "Dockerfile.dev",
        "args": {
            "HTTP_PORT": "8080",
            "HTTPS_PORT": "8443"
        }
    },
    "runArgs": ["--name=TEIPublisherVanGogh"],
    "forwardPorts": [ 8080, 8001 ],
    "customizations": {
        "vscode": {
            "extensions": [ "exist-db.existdb-vscode", "42crunch.vscode-openapi", "redhat.vscode-xml" ]
        }
    },
    "overrideCommand": false,
    "postStartCommand": "${containerWorkspaceFolder}/.devcontainer/init.sh",
    "features": {
        "ghcr.io/devcontainers/features/node:1": {
            "version": "latest"
        }
    }
}